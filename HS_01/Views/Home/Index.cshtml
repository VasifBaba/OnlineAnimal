@using HS_01.ViewModels;
@model DefaultVIiewModel
@{
    ViewBag.Title = "Index";
}

<!-- CATEGORY START -->

<section class="section-main bg padding-y mt-5 mb-5">
    <div class="container">
        <div class="row">
            <aside class="col-md-3">
                <nav class="card">
                    <ul class="menu-category list-unstyled">
                        @foreach (var item in Model.ctg)
                        {
                            <li class="has-submenu">
                                <a href="#">@item.Name</a>
                                <ul class="submenu">
                                    @foreach (var animalItem in item.Animals)
                                    {
                                        <li><a href="@Url.Action("Choose", "Home", new { aniID = animalItem.ID, id = item.ID })">@animalItem.Name</a></li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                </nav>
            </aside>
            <div class="offset-1"></div>
            <div class="col-md-8">
                <article class="banner-wrap">
                    <div class="banner w-100 rounded">
                        <h1>Reklam Banneri</h1>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>

<!-- CATEGORY END -->
<!-- ELANLAR START -->

<section id="Elanlar" class="mt-5 mb-5">
    <div class="mt-5 mb-5 text-success">
        <h3 class="text-center mt-5 mb-5">Premium Elanlar</h3>
        <div class="owl-carousel owl-theme">
            @foreach (var animalItem in Model.ani)
            {
                <div class="h-100">
                    <img src="~/Uploads/@animalItem.Photo" class="card-img-top img-responsive img-thumbnail" style="height:200px;object-fit:contain" />
                    <hr />
                    <div class="card-body text-center" style="background-color: lightgray">
                        <h4 class="card-title">
                            <a class="text-success" href="@Url.Action("Melumat","Animal", new {id=animalItem.ID})">@animalItem.Name</a>
                        </h4>
                        <h5>@animalItem.Price Azn</h5>
                    </div>
                    <hr />
                </div>
            }
        </div>
    </div>

    <div class="container-fluid ">
        <img style="height:380px;" class="img-thumbnail card-img-top border-10" src="~/Uploads/cat.jpg" />
    </div>

    <div class="mt-5 mb-5 text-success">
        <h3 class="text-center mt-5 mb-5">Yeni Elanlar</h3>
        <div class="owl-carousel owl-theme">
            @foreach (var animalItem in Model.ani)
            {
                <div class="h-100">
                    <img src="~/Uploads/@animalItem.Photo" class="card-img-top img-responsive img-thumbnail" style="height:200px;object-fit:contain" />
                    <hr />
                    <div class="card-body text-center" style="background-color: lightgray">
                        <h4 class="card-title">
                            <a class="text-success" href="@Url.Action("Melumat","Animal", new {id=animalItem.ID})">@animalItem.Name</a>
                        </h4>
                        <h5>@animalItem.Price Azn</h5>
                    </div>
                    <hr />
                </div>
            }
        </div>
    </div>
</section>

<!-- ELANLAR END -->
